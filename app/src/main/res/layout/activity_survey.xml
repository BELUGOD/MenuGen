        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:backgroundTint="#FF7F00"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="100dp"/>

    </LinearLayout>
</layout>