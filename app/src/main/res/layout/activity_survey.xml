<?xml version="1.0" encoding="utf-8"?>

<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFE4B5">
            <ImageView
                android:layout_marginStart="90dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/topimg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENUGEN"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:text="귀하의 목표는 무엇인가요?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여러분의 목표에 따라 맞춤형 \n추천사항을 제시합니다"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RadioButton
                android:id="@+id/habit"
                android:textAlignment="center"
                android:layout_marginTop="48dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:foregroundTint="@color/black"
                android:text="건강한 식습관"
                android:drawableRight="@drawable/bowl"/>
            <RadioButton
                android:id="@+id/disease"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:foregroundTint="@color/black"
                android:text="식단으로 건강 유지"
                android:drawableRight="@drawable/sun"/>
            <RadioButton
                android:id="@+id/diet"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:foregroundTint="@color/black"
                android:text="체형의 긍정적 변화"
                android:drawableRight="@drawable/row"/>

        </RadioGroup>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:backgroundTint="#FF7F00"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="100dp"/>

    </LinearLayout>
</layout>