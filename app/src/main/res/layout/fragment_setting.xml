<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Recommend"
        android:orientation="vertical">

        // 1: 날짜 버튼
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="2022-08-25"
            android:drawableEnd="@drawable/ic_calendar"
            android:layout_gravity="center"/>

        // 아침 식단 관리
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#86FF8D8D"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침"
                android:background="@drawable/edge"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            // 식단 관리: 소분류 1번
            <LinearLayout
                android:id="@+id/small_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/rice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(쌀밥)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            // 식단 관리: 소분류 2번
            <LinearLayout
                android:id="@+id/small_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/tang"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(육개장)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        // 점심 식단 관리
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFE699"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"
                android:background="@drawable/edge"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            // 식단 관리: 소분류 3번
            <LinearLayout
                android:id="@+id/small_menu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/bokkeum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(~볶음)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            // 식단 관리: 소분류 4번
            <LinearLayout
                android:id="@+id/small_menu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/juk"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(야채죽)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        // 저녁 식단 관리
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BBE3BD"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"
                android:background="@drawable/edge"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            // 식단 관리: 소분류 5번
            <LinearLayout
                android:id="@+id/small_menu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/cookie"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(쿠키)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            // 식단 관리: 소분류 6번
            <LinearLayout
                android:id="@+id/small_menu6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/drink"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(과일주스)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        // 식단 수정 버튼
        <Button
            android:id="@+id/btn_changeMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식단 수정"
            android:layout_gravity="center"/>

    </LinearLayout>
</layout>