<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Recommend2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFE4B5">
            <ImageView
                android:layout_marginStart="90dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/topimg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENUGEN"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>
        </LinearLayout>
        //여기까지 상단바

        // 식단 추천 상단 문구
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="오늘 한끼는 이렇게 드셔볼까요?"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        // 오늘의 식단 텍스트뷰
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#EA5656"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대분류 - 밥류"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>


        // 식단 추천: 중분류 1,2번
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            // 식단 추천: 중분류 1번
            <LinearLayout
                android:id="@+id/large_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#32FD4987"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recommend2_img1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중분류 1번 (쌀밥)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            // 식단 추천: 중분류 2번
            <LinearLayout
                android:id="@+id/large_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33FFC107"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recommend2_img2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중분류 2번 (잡곡밥류)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        // 식단 추천: 중분류 3,4번
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            // 식단 추천: 중분류 3번
            <LinearLayout
                android:id="@+id/large_menu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3300FF77"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/recommend2_img3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중분류 3번 (채소밥류)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            // 식단 추천: 중분류 4번
            <LinearLayout
                android:id="@+id/large_menu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33566EF4"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recommend2_img4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중분류 4번 (비빔밥류)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>



        // 하단바
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_marginTop="110dp"
            android:id="@+id/bottom_navigationview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:itemBackground="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu" />

    </LinearLayout>
</layout>