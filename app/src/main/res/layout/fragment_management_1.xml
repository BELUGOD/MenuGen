<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Management1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                // 검색란
                <SearchView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:iconifiedByDefault="false"
                    android:queryHint="식단 검색"
                    android:layout_gravity="center"/>

                //식단관리 영역

                // 다음화면 넘어가는 버튼

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:orientation="vertical">

                    // 태그 버튼 목록1 -> 클릭시 enable="true"로 되게 해야함
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/tag1"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:clickable="false"
                            android:text="밥" />

                        <Button
                            android:id="@+id/tag2"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:text="국" />

                        <Button
                            android:id="@+id/tag3"
                            android:layout_width="105dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:text="면 및 만두" />

                        <Button
                            android:id="@+id/tag4"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:text="찌개" />

                        <Button
                            android:id="@+id/tag5"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:text="조림" />
                    </LinearLayout>


                    // 음식 목록란
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="#EA5656"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="음식 목록"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edge">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/foodlist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                    // 최종 음식 확인란
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#EA5656"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="최종 선택 메뉴"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edge"
                        android:orientation="vertical">

                        // 사용자가 선택한 음식이 뜨는 곳
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/finallist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_settingFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식단 저장하기"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>