<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFE4B5">
            <ImageView
                android:layout_marginStart="90dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/topimg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENUGEN"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>
        </LinearLayout>
        //여기까지 상단바

        // 식단 추천 상단 문구
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="오늘 한끼는 이렇게 드셔볼까요?"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        // 식단 평가 버튼
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 식단(한끼)"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        // 식단 추천: 대분류 1번
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#8DFD4987"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대분류 1번"
                android:textSize="30dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        // 식단 추천: 대분류 2번
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#A1FFC107"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대분류 2번"
                android:textSize="30dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        // 식단 추천: 대분류 3번
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#00ff77"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대분류 3번"
                android:textSize="30dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        // 식단 추천: 대분류 4번
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#566EF4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대분류 4번"
                android:textSize="30dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        // 식단 평가 버튼
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식단 평가"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>



   </LinearLayout>
</layout>