<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Recommend"
        android:orientation="vertical">


        // 식단 추천 상단 문구
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="오늘 한끼는 이렇게 드셔볼까요?"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        // 오늘의 식단 텍스트뷰
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#EA5656"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="오늘의 식단 (한끼)"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>

        // 식단 추천: 대분류 1,2번
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            // 식단 추천: 대분류 1번
            <LinearLayout
                android:id="@+id/large_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#32FD4987"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/menu1"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rice"/>

                <TextView
                    android:id="@+id/menu1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대분류 1번 (밥류)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            // 식단 추천: 대분류 2번
            <LinearLayout
                android:id="@+id/large_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33FFC107"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/menu2"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tang"/>

                <TextView
                    android:id="@+id/menu2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대분류 2번 (국류)"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        // 식단 추천: 대분류 3,4번


        // 하단 바 (맨 아래 고정)

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            // 식단 추천: 대분류 3번

            <LinearLayout
                android:id="@+id/large_menu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#3300FF77"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/menu3"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gui" />

                <TextView
                    android:id="@+id/menu3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="대분류 3번 (구이류)"
                    android:textSize="15dp" />
            </LinearLayout>

            // 식단 추천: 대분류 4번

            <LinearLayout
                android:id="@+id/large_menu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#33566EF4"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/menu4"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:src="@drawable/muchim" />

                <TextView
                    android:id="@+id/menu4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="대분류 4번 (무침류)"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>