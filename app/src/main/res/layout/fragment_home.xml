<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Recommend"
        android:orientation="vertical"
        android:gravity="center">

        // 식단 추천 상단 문구
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="오늘 한끼는 이렇게 드셔볼까요?"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        // 오늘의 식단 텍스트뷰
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#EA5656"
            android:layout_gravity="center"
            android:layout_margin="10dp">
        </androidx.cardview.widget.CardView>


        // 식단 추천: 대분류 1번
        <LinearLayout
            android:id="@+id/large_menu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#32FD4987"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:src="@drawable/rice"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#32FD4987"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대분류 1번 (밥류)"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(쌀밥)"
                    android:textSize="15dp"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>

        // 식단 추천: 대분류 2번

        // 식단 추천: 대분류 3번

        <LinearLayout
            android:id="@+id/large_menu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="#33FFC107"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:src="@drawable/tang" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#33FFC107"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="대분류 2번 (국류)"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(~국)"
                    android:textSize="15dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/large_menu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3300FF77"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:src="@drawable/gui"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3300FF77"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대분류 3번 (구이류)"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(~구이)"
                    android:textSize="15dp"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>

        // 식단 추천: 대분류 4번
        <LinearLayout
            android:id="@+id/large_menu4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33566EF4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:src="@drawable/muchim"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33566EF4"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대분류 4번 (무침류)"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류(~무침)"
                    android:textSize="15dp"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>